<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".activities.Basic_Language_Lessons">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Activity Title -->
            <TextView
                android:id="@+id/activityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Language Lessons"
                android:textAlignment="center"
                android:textColor="@color/primary_blue"
                android:textSize="36sp"
                android:textStyle="bold"/>

            <!-- Activity Description -->
            <TextView
                android:id="@+id/activityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose an activity to start learning."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"/>

            <!-- Language Activities Buttons -->
            <Button
                android:id="@+id/vocabularyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vocabulary Practice"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/grammarButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grammar Practice"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/speakingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speaking Practice"
                android:layout_marginBottom="8dp"/>

            <!-- Contextual Learning Button -->
            <Button
                android:id="@+id/contextualLearningButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contextual Learning"
                android:layout_marginBottom="8dp"/>

            <!-- Back to Home Button -->
            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Home"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/primary_blue"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
