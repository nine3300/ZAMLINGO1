<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/speakingPracticeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:gravity="center">

    <!-- Title/Instructions Text -->
    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type a word or sentence and click the button to hear the pronunciation."
        android:textSize="18sp"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="24dp"
        android:textAlignment="center" />

    <!-- EditText for user input -->
    <EditText
        android:id="@+id/userInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type a word or sentence"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@color/light_blue"
        android:padding="12dp"
        android:inputType="text" />

    <!-- Button to trigger pronunciation -->
    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:cornerRadius="8dp"
        android:onClick="onSpeakButtonClick" />

    <!-- TextView for pronunciation feedback -->
    <TextView
        android:id="@+id/pronunciationFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronunciation will appear here."
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black" />
        android:textAlignment="center" />

</LinearLayout>
